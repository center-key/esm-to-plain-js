{
   "name": "esm-to-plain-js",
   "version": "0.0.1",
   "description": "Simplistic string substitution to replace export with a globalThis assignment (CLI tool designed for use in npm scripts)",
   "license": "MIT",
   "type": "module",
   "module": "dist/esm-to-plain-js.js",
   "main": "dist/esm-to-plain-js.umd.cjs",
   "types": "dist/esm-to-plain-js.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/esm-to-plain-js.js",
         "require": "./dist/esm-to-plain-js.umd.cjs"
      },
      "./": "./dist/"
   },
   "bin": {
      "esm-to-plain-js": "bin/cli.js"
   },
   "repository": "github:center-key/esm-to-plain-js",
   "homepage": "https://github.com/center-key/esm-to-plain-js",
   "bugs": "https://github.com/center-key/esm-to-plain-js/issues",
   "docs": "https://github.com/center-key/esm-to-plain-js#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "cli",
      "export"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist spec/fixtures/target **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:04": "tsc",
      "step:05": "tsc --module UMD --outDir build/umd",
      "step:06": "copy-file build/umd/esm-to-plain-js.js build/esm-to-plain-js.umd.cjs",
      "step:07": "add-dist-header build dist",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js"
   },
   "dependencies": {
      "chalk": "~5.0",
      "fancy-log": "~2.0",
      "slash": "~5.0"
   },
   "devDependencies": {
      "@types/fancy-log": "~2.0",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.39",
      "@typescript-eslint/parser": "~5.39",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "eslint": "~8.24",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "rimraf": "~3.0",
      "typescript": "~4.8"
   }
}
